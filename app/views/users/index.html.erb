<% provide(:title, "All Users") %>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center header">All Users</h1>
    </div>
  </div>

  <div class="row">

      <% @users.each do |u| %>
        <div class="col-md-6 user-card">
          <div class="card">
            <div class="card-body">

              <div class="row">
                <div class="col-md-6">
                  <h5 class="card-title"><%= link_to(u.first_name + " " + u.last_name, user_path(u.id), class: "link") %></h5>
                </div>
                <div class="col-md-6">
                  <a href="#" class="btn btn-primary float-right">Add Friend</a>
                </div>
              </div>

            </div>
          </div>
        </div>
      <% end %>

  </div>

</div>